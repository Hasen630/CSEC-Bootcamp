<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toggle Text Project</title>

    <style>
        /* Page Styling */
        body {
            margin: 0;
            height: 100vh;
            display: flex;                 /* Flexbox (mandatory) */
            justify-content: center;       /* Center horizontally */
            align-items: center;           /* Center vertically */
            background-color: #1e1e2f;
            font-family: Arial, Helvetica, sans-serif;
        }

        /* Container */
        .container {
            display: flex;                 /* Flexbox */
            flex-direction: column;        /* Vertical alignment */
            align-items: center;
            gap: 20px;                     /* Space between items */
            background-color: #ffffff;
            padding: 40px;
            border-radius: 10px;
        }

        /* Heading */
        h1 {
            display: block;                /* Display requirement */
            text-align: center;
            font-size: 3rem;
            font-weight: bold;
            text-transform: uppercase;
            margin: 0;
        }

        /* Button */
        button {
            display: inline-block;         /* Display requirement */
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            border: none;
            border-radius: 6px;
            background-color: #4a90e2;
            color: #ffffff;
        }

        button:hover {
            background-color: #357abd;
        }

        /* Responsive */
        @media (max-width: 480px) {
            h1 {
                font-size: 2.2rem;
            }

            button {
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <h1 id="statusText">OFF</h1>
        <button id="toggleBtn">Toggle</button>
    </div>

    <script>
        // Select elements
        const statusText = document.getElementById("statusText");
        const toggleBtn = document.getElementById("toggleBtn");

        // Track state
        let isOn = false;

        // Click event
        toggleBtn.addEventListener("click", function () {
            if (isOn) {
                statusText.textContent = "OFF";
                isOn = false;
            } else {
                statusText.textContent = "ON";
                isOn = true;
            }
        });
    </script>

</body>
</html>
